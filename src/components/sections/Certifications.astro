---
import Section from "../Section.astro";

import { certificates } from "@cv";
---

<Section title="Certifications">
  <ul>
    {
      certificates.map(({ name, startDate, endDate, issuer, url }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear = endDate ? new Date(endDate).getFullYear() : null;
        const years = endYear ? `${startYear} - ${endYear}` : startYear;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a
                      href={url}
                      target="_blank"
                      title={`Ver el proyecto ${name}`}
                    >
                      {name}
                    </a>
                  </h3>
                </div>
                <time>{years}</time>
              </header>
              <footer>
                <p>{issuer}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
